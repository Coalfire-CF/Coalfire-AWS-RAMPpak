---
# aws ec2 ansible dynamic inventory plugin
plugin: amazon.aws.aws_ec2

{% if item.iam_role_arn is defined %}
iam_role_arn: {{ item.iam_role_arn }}

{% endif %}
{% if is_gov %}
regions:
  - us-gov-west-1
  - us-gov-east-1

{% else %}
regions:
  - us-east-1
  - us-west-1
  - us-west-2
  - us-east-2

{% endif %}
# set strict to False
# if True this will make invalid entries
# a fatal error
strict: false

allow_duplicated_hosts: true

keyed_groups:
  - key: tags['Role']
    separator: ""
  - key: tags['SecondaryRole']
    separator: ""
  - key: tags['OSFamily']
    separator: ""
  - key: tags['Benchmark']
    separator: ""
hostnames:
  # a list in order of precedence for hostname variables.
  - tag:Name

groups:
  {{ item.account }}: tags['OSType'] == 'Windows' or tags['OSType'] == 'Linux'
  windows: tags['OSType'] == 'Windows'
  linux: tags['OSType'] == 'Linux'
